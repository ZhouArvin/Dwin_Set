<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="80dp"
        android:baselineAligned="false"
        android:orientation="horizontal" >

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:alpha="0.8"
            android:background="@drawable/right_bg"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/relativelayout_width"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/bg_shape" >

                <ImageView
                    android:id="@+id/iv_width"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="20dp"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/width" />

                <TextView
                    android:id="@+id/tv_width_ms"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/iv_width"
                    android:layout_alignParentRight="true"
                    android:layout_alignTop="@id/iv_width"
                    android:layout_marginRight="10dp"
                    android:gravity="center"
                    android:text="ms"
                    android:textColor="@android:color/black"
                    android:textSize="22sp" />

                <TextView
                    android:id="@+id/tv_width_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/iv_width"
                    android:layout_alignTop="@id/iv_width"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@id/tv_width_ms"
                    android:layout_toRightOf="@id/iv_width"
                    android:gravity="center"
                    android:text="10"
                    android:textColor="@android:color/black"
                    android:textSize="22sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/iv_width"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:paddingBottom="15dp" >

                    <Button
                        android:id="@+id/btn_decrease"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/reduce_rec_selector" />

                    <Button
                        android:id="@+id/btn_increase"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:layout_weight="1"
                        android:background="@drawable/add_rec_selector" />
                </LinearLayout>
            </RelativeLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:contentDescription="@string/app_name"
                android:src="@drawable/width_handstand" />

            <RelativeLayout
                android:id="@+id/relativelayout_repeat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/relativelayout_width"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="40dp"
                android:background="@drawable/bg_shape" >

                <ImageView
                    android:id="@+id/iv_repeat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="20dp"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/repeat" />

                <TextView
                    android:id="@+id/tv_repeat_s"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/iv_repeat"
                    android:layout_alignParentRight="true"
                    android:layout_alignTop="@id/iv_repeat"
                    android:layout_marginRight="10dp"
                    android:gravity="center"
                    android:text="S"
                    android:textColor="@android:color/black"
                    android:textSize="22sp" />

                <TextView
                    android:id="@+id/tv_repeat_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/iv_repeat"
                    android:layout_alignTop="@id/iv_repeat"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@id/tv_repeat_s"
                    android:layout_toRightOf="@id/iv_repeat"
                    android:gravity="center"
                    android:text="10"
                    android:textColor="@android:color/black"
                    android:textSize="22sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/iv_repeat"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:paddingBottom="15dp" >

                    <Button
                        android:id="@+id/btn_repeat_decrease"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/reduce_rec_selector" />

                    <Button
                        android:id="@+id/btn_repeat_increase"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:layout_weight="1"
                        android:background="@drawable/add_rec_selector" />
                </LinearLayout>
            </RelativeLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/relativelayout_width"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="30dp"
                android:contentDescription="@string/app_name"
                android:src="@drawable/repeat_handstand" />

            <TextView
                android:id="@+id/tv_horizontal_line1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/relativelayout_repeat"
                android:layout_marginTop="10dp"
                android:background="@drawable/horizontal_line"
                android:contentDescription="@string/app_name" />

            <LinearLayout
                android:id="@+id/linealayout_cure_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_horizontal_line1"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_shape"
                android:orientation="horizontal"
                android:paddingBottom="10dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="15dp" >

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/cure_count"
                    android:padding="10dp" />

                <TextView
                    android:id="@+id/tv_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/bg_shape"
                    android:paddingBottom="10dp"
                    android:paddingLeft="30dp"
                    android:paddingRight="30dp"
                    android:paddingTop="10dp"
                    android:text="1234" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linealayout_plan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/linealayout_cure_count"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/bg_shape"
                android:orientation="horizontal"
                android:paddingBottom="10dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="10dp" >

                <Button
                    android:id="@+id/btn_plan1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/plan1_selected" />

                <Button
                    android:id="@+id/btn_plan2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="1"
                    android:background="@drawable/plan2_selected" />

                <Button
                    android:id="@+id/btn_plan3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="1"
                    android:background="@drawable/plan3_selected" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:layout_weight="1"
            android:background="@drawable/right_bg"
            android:orientation="vertical"
            android:paddingBottom="30dp" >

            <RelativeLayout
                android:id="@+id/relativelayout_fluence"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/bg_shape" >

                <LinearLayout
                    android:id="@+id/linearlayout_fluence_add_reduce"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:orientation="vertical"
                    android:padding="20dp" >

                    <Button
                        android:id="@+id/btn_fluence_add"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/add_selector" />

                    <Button
                        android:id="@+id/btn_fluence_reduce"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:background="@drawable/reduce_selector" />
                </LinearLayout>

                <View
                    android:id="@+id/iv_vertical_line1"
                    android:layout_width="2dp"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/linearlayout_fluence_add_reduce"
                    android:layout_alignTop="@id/linearlayout_fluence_add_reduce"
                    android:layout_toLeftOf="@id/linearlayout_fluence_add_reduce"
                    android:background="#333333" />

                <TextView
                    android:id="@+id/tv_fluence"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/iv_vertical_line1"
                    android:layout_alignTop="@id/iv_vertical_line1"
                    android:layout_toLeftOf="@id/iv_vertical_line1"
                    android:gravity="center"
                    android:text="10 "
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/tv_fluence"
                    android:layout_alignRight="@id/tv_fluence"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="10dp"
                    android:text="J/cm2" />
            </RelativeLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:contentDescription="@string/app_name"
                android:src="@drawable/fluence_handstand" />

            <TextView
                android:id="@+id/tv_horizontal_line2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/relativelayout_fluence"
                android:layout_marginTop="20dp"
                android:background="@drawable/horizontal_line"
                android:contentDescription="@string/app_name" />

            <RelativeLayout
                android:id="@+id/relativelayout_temperature"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_horizontal_line2"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/bg_shape" >

                <LinearLayout
                    android:id="@+id/linearlayout_tem_add_reduce"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:orientation="vertical"
                    android:padding="20dp" >

                    <Button
                        android:id="@+id/btn_tem_add"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/add_selector" />

                    <Button
                        android:id="@+id/btn_tem_reduce"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:background="@drawable/reduce_selector" />
                </LinearLayout>

                <View
                    android:id="@+id/iv_vertical_line2"
                    android:layout_width="2dp"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/linearlayout_tem_add_reduce"
                    android:layout_alignTop="@id/linearlayout_tem_add_reduce"
                    android:layout_toLeftOf="@id/linearlayout_tem_add_reduce"
                    android:background="#333333"
                    android:contentDescription="@string/app_name" />

                <RelativeLayout
                    android:id="@+id/linearlayout_temp_num"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/iv_vertical_line2"
                    android:layout_alignTop="@id/iv_vertical_line2"
                    android:layout_marginLeft="10dp"
                    android:layout_toLeftOf="@id/iv_vertical_line2"
                    android:orientation="vertical" >

                    <ImageView
                        android:id="@+id/iv_temp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:contentDescription="@string/app_name"
                        android:src="@drawable/temp_zero" />

                    <RelativeLayout
                        android:id="@+id/relativelayout_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@id/iv_temp"
                        android:layout_alignTop="@id/iv_temp"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@id/iv_temp" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="10"
                            android:textSize="18sp"
                            android:layout_centerHorizontal="true" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:text="0"
                            android:layout_centerHorizontal="true"
                            android:textSize="18sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:text="5"
                            android:layout_centerHorizontal="true"
                            android:textSize="18sp" />
                    </RelativeLayout>
                    
                    <LinearLayout
                        android:id="@+id/linearLayout_o"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@id/relativelayout_num"
                        android:layout_alignTop="@id/relativelayout_num"
                        android:layout_marginLeft="15dp"
                        android:layout_toRightOf="@id/relativelayout_num"
                        android:orientation="vertical" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:text="o"
                            android:textSize="14sp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:text="o"
                            android:layout_weight="1"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:text="o"
                            android:textSize="14sp" />
                    </LinearLayout>
                    
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@id/linearLayout_o"
                        android:layout_alignTop="@id/linearLayout_o"
                        android:layout_marginLeft="5dp"
                        android:layout_toRightOf="@id/linearLayout_o" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="C"
                            android:textSize="18sp"
                            android:layout_centerHorizontal="true" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:text="C"
                            android:layout_centerHorizontal="true"
                            android:textSize="18sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:text="C"
                            android:layout_centerHorizontal="true"
                            android:textSize="18sp" />
                    </RelativeLayout>

